<h1>Tasks#index</h1>
<% @tasks.each do |task| %>
  <h3><%= task.description %></h3>
  <p>
    <%= link_to "see", task_path(task) %>
    <%= link_to "edit", edit_task_path(task) %>
    <%= link_to "delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </p>
<% end %>

  <p><%= link_to "Create a new task!", new_task_path %></p>


